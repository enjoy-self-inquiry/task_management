<!DOCTYPE html>
<html>
  <head>
    <title>TaskManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <ul>
        <% if logged_in? %>
          <li><%= link_to tasks_path, title: "トップページ" do %>
            <i class="fas fa-tasks fa-2x white"></i>
            <% end %>
          </li>
          <li><%= link_to new_task_path, title: "新規作成" do %>
            <i class="fas fa-pen-fancy fa-2x white"></i>
            <% end %>
          </li>
          <li><%= link_to user_path(current_user.id), title: "プロフィール" do %>
            <i class="fas fa-user-circle fa-2x white"></i>
          <% end %>
          </li>
          <li><%= link_to session_path(current_user.id), title: "ログアウト", method: :delete do %>
            <i class="fas fa-sign-out-alt fa-2x white"></i>
            <% end %>
          </li>
          <li><%= link_to admin_users_path(current_user.id), title: "管理画面" do %>
            <i class="fas fa-user-cog fa-2x white"></i>
          <% end %>
          </li>
        <% else %>
          <li><%= link_to new_user_path, title: "新規登録" do %>
            <i class="fas fa-user-plus fa-2x white"></i>
          <% end %>
          </li>
          <li><%= link_to new_session_path, title: "ログイン" do %>
            <i class="fas fa-door-open fa-2x white"></i>
          <% end %>
        <% end %>
      </ul>
    </header>
    <%= yield %>
    <footer>
      <p>タスク管理アプリ</p>
    </footer>
  </body>
</html>
